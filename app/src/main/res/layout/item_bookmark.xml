<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Bookmark Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bookmarks"
            android:layout_marginEnd="12dp"
            app:tint="@color/primary_color" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/tvBookmarkTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bookmark Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Chapter 1: Introduction to PDF" />

            <!-- File Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvFileName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="filename.pdf"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="sample_document.pdf" />

                <TextView
                    android:id="@+id/tvPageNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Page 1"
                    android:textSize="12sp"
                    android:textColor="@color/primary_color"
                    android:background="@drawable/bg_rounded_primary_light"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:layout_marginStart="8dp"
                    tools:text="Page 15" />

            </LinearLayout>

            <!-- Note (if exists) -->
            <TextView
                android:id="@+id/tvNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note content"
                android:textSize="12sp"
                android:textColor="@color/light_gray"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone"
                tools:text="This is an important section to remember"
                tools:visibility="visible" />

            <!-- Created Time -->
            <TextView
                android:id="@+id/tvCreatedTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Created time"
                android:textSize="11sp"
                android:textColor="@color/light_gray"
                android:layout_marginTop="4dp"
                tools:text="2 hours ago" />

        </LinearLayout>

        <!-- Delete Button -->
        <ImageView
            android:id="@+id/btnDeleteBookmark"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delete"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:layout_marginStart="8dp"
            app:tint="@color/red" />

    </LinearLayout>

</androidx.cardview.widget.CardView>