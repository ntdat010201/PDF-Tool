<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="24dp"
    android:height="24dp"
    android:viewportWidth="24"
    android:viewportHeight="24">
    
    <!-- Clock circle outline using path -->
    <path
        android:pathData="M12,3 A9,9 0 1,1 12,21 A9,9 0 1,1 12,3 Z"
        android:strokeColor="#666666"
        android:strokeWidth="2"
        android:fillColor="@android:color/transparent"/>
    
    <!-- Clock hands - simple lines -->
    <!-- Hour hand pointing to 4 (shorter) -->
    <path
        android:pathData="M12,12 L15,14"
        android:strokeColor="#666666"
        android:strokeWidth="2"
        android:strokeLineCap="round"/>
    
    <!-- Minute hand pointing to 12 (longer) -->
    <path
        android:pathData="M12,12 L12,7"
        android:strokeColor="#666666"
        android:strokeWidth="2"
        android:strokeLineCap="round"/>
</vector>